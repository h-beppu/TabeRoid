<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout    
		android:orientation="vertical"  
	    android:layout_width="fill_parent"    
	    android:layout_height="fill_parent"  
	    android:background="@color/bgcolor"
	    android:padding="5dp">
        <TabWidget
 			android:id="@android:id/tabs"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		</TabWidget>  
<FrameLayout
	android:id="@android:id/tabcontent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<!--②タブ1のレイアウト定義-->
	<LinearLayout
		android:id="@+id/view1"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_width="fill_parent"
			android:layout_height="?android:attr/listPreferredItemHeight"
    		android:padding="6dip"
    		android:layout_gravity="left"
    		android:gravity="left"
		    android:background="@color/bgcolor">
			<ImageView
				android:id="@+id/Photo"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginRight="6dip" />
   	    	<TextView
				android:id="@+id/RestaurantName"
				android:layout_width="wrap_content"
   	    	    android:layout_height="wrap_content"
   	    	    android:textSize="20sp"
   	    	    android:textColor="@color/header_color" />
		</LinearLayout>
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="1"
			android:shrinkColumns="1"
		    android:background="@color/bgcolor">
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_totalscore"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
	    			<LinearLayout
        				android:layout_width="fill_parent"
        				android:layout_height="fill_parent"
						android:layout_weight="1">
	    				<ImageView
							android:id="@+id/TotalScoreStar"
							android:layout_width="wrap_content"
    				    	android:layout_height="wrap_content"
							android:layout_marginRight="6dip"
    				    	android:src="@drawable/star_back"/>
    				    <TextView
							android:id="@+id/TotalScore"
							android:layout_width="wrap_content"
    				        android:layout_height="wrap_content"
							android:layout_weight="1"
    				        android:textColor="@color/header_color"
   					        android:textSize="12sp"
							android:singleLine="true"
							android:ellipsize="marquee"/>
	    			</LinearLayout>
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_tastescore"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
	    			<LinearLayout
        				android:layout_width="fill_parent"
        				android:layout_height="fill_parent"
						android:layout_weight="1">
	    				<ImageView
							android:id="@+id/TasteScoreStar"
							android:layout_width="wrap_content"
    				    	android:layout_height="wrap_content"
							android:layout_marginRight="6dip"
    				    	android:src="@drawable/star_back"/>
    				    <TextView
							android:id="@+id/TasteScore"
							android:layout_width="wrap_content"
    				        android:layout_height="wrap_content"
							android:layout_weight="1"
    				        android:textColor="@color/header_color"
   					        android:textSize="12sp"
							android:singleLine="true"
							android:ellipsize="marquee"/>
	    			</LinearLayout>
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_servicescore"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
	    			<LinearLayout
        				android:layout_width="fill_parent"
        				android:layout_height="fill_parent"
						android:layout_weight="1">
	    				<ImageView
							android:id="@+id/ServiceScoreStar"
							android:layout_width="wrap_content"
    				    	android:layout_height="wrap_content"
							android:layout_marginRight="6dip"
    				    	android:src="@drawable/star_back"/>
    				    <TextView
							android:id="@+id/ServiceScore"
							android:layout_width="wrap_content"
    				        android:layout_height="wrap_content"
							android:layout_weight="1"
    				        android:textColor="@color/header_color"
   					        android:textSize="12sp"
							android:singleLine="true"
							android:ellipsize="marquee"/>
	    			</LinearLayout>
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_moodscore"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
	    			<LinearLayout
        				android:layout_width="fill_parent"
        				android:layout_height="fill_parent"
						android:layout_weight="1">
	    				<ImageView
							android:id="@+id/MoodScoreStar"
							android:layout_width="wrap_content"
    				    	android:layout_height="wrap_content"
							android:layout_marginRight="6dip"
    				    	android:src="@drawable/star_back"/>
    				    <TextView
							android:id="@+id/MoodScore"
							android:layout_width="wrap_content"
    				        android:layout_height="wrap_content"
							android:layout_weight="1"
    				        android:textColor="@color/header_color"
   					        android:textSize="12sp"
							android:singleLine="true"
							android:ellipsize="marquee"/>
	    			</LinearLayout>
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_situation"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/Situation"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_dinnerprice"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/DinnerPrice"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_lunchprice"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/LunchPrice"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_category"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/Category"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_station"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/Station"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_address"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/Address"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_tel"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/Tel"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_businesshours"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/BusinessHours"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_holiday"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/Holiday"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/label_latlon"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			   	<TextView
					android:id="@+id/LatLon"
			        android:textSize="12sp"
					android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:textColor="@color/header_color" />
			</TableRow>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<Button
					android:id="@+id/button_share_map"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/button_share_map"
			    	android:layout_gravity="center"
					android:layout_span="2" />
			</TableRow>
		</TableLayout>
	</LinearLayout>
	<!--②タブ2のレイアウト定義-->
	<LinearLayout
		android:id="@+id/view2"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_width="fill_parent"
			android:layout_height="?android:attr/listPreferredItemHeight"
    		android:padding="6dip"
    		android:layout_gravity="left"
    		android:gravity="left"
		    android:background="@color/bgcolor">
			<ImageView
				android:id="@+id/Photo2"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginRight="6dip" />
   	    	<TextView
				android:id="@+id/RestaurantName2"
				android:layout_width="wrap_content"
   	    	    android:layout_height="wrap_content"
   	    	    android:textSize="20sp"
   	    	    android:textColor="@color/header_color" />
		</LinearLayout>
		<ListView
			android:id="@+id/listview_reviews" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" />
	</LinearLayout>
	<!--③タブ3のレイアウト定義-->
	<TextView android:id="@+id/view3"
		android:background="@color/bgcolor"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:text="tab3" />
	<!--③ナビボタンのレイアウト定義-->
    <ImageView
		android:id="@+id/image_navi1"
		android:layout_width="wrap_content"
        android:layout_height="fill_parent"
		android:layout_marginRight="6dip"
		android:layout_gravity="left"
        android:src="@drawable/icon" />
    <ImageView
		android:id="@+id/image_navi2"
		android:layout_width="wrap_content"
        android:layout_height="fill_parent"
		android:layout_marginRight="6dip"
		android:layout_gravity="right"
        android:src="@drawable/icon" />
</FrameLayout>
</LinearLayout>
</TabHost>
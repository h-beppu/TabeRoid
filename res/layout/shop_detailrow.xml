<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dip"
	android:background="@color/row_bgcolor"
	android:layout_weight="1">
    <TextView
		android:id="@+id/NickName"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>*>
    <TextView
		android:id="@+id/VisitDate"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/ReviewDate"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/UseType"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/Situations"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/TotalScore"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/TasteScore"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/ServiceScore"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/MoodScore"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/DinnerPrice"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/LunchPrice"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/Title"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/Comment"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/PcSiteUrl"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
    <TextView
		android:id="@+id/MobileSiteUrl"
		android:layout_width="fill_parent"
        android:layout_height="0dip"
		android:layout_weight="1"
        android:textColor="@color/text1_color"
        android:gravity="center_vertical"/>
</LinearLayout>